<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardBackgroundColor="#888888"
        android:layout_margin="5dp">

        <RelativeLayout
            android:id="@+id/selectItunesPodcast"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/itunesPodcastImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/checkerboard"
                android:contentDescription="@string/podcast_image"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"/>

            <ImageView
                android:id="@+id/itunesPodcastDownloadButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/ic_download"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/itunesPodcastTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/podcast_title"
                android:textSize="16sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/itunesPodcastImage"
                android:layout_toEndOf="@+id/itunesPodcastImage"
                android:layout_toLeftOf="@id/itunesPodcastDownloadButton"
                android:layout_toStartOf="@id/itunesPodcastDownloadButton"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
