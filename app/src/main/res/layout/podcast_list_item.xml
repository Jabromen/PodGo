<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/selectPodcastListItem"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center|start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/podcastImageListItem"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center|start"
            android:src="@mipmap/ic_temp_podcast_icon"
            android:contentDescription="@string/podcast_image_list_item"/>

        <TextView
            android:id="@+id/podcastTitleListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_podcast_title_list_item"
            android:layout_gravity="center|start"
            android:textSize="30sp"/>

    </LinearLayout>

</LinearLayout>
